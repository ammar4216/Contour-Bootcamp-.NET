@model MenuCategory


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add New Menu Category</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="MenuCategoryName">Category Name</label>
                <input type="text" class="form-control mb-3" asp-for="MenuCategoryName" placeholder="Enter category name...">
                <span asp-validation-for="MenuCategoryName" class=" alert-danger"></span>
            </div> 
        </div>

        <div class="form-row">
           <div class="form-group col-md-6">
                <label asp-for="MenuCategoryDescription">Category Description</label>
                <input type="text" class="form-control mb-3" asp-for="MenuCategoryDescription" placeholder="Enter description">
                <span asp-validation-for="MenuCategoryDescription" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="MenuCategory" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}