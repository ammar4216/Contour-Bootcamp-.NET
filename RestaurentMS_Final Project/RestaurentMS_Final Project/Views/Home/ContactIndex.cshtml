@model IEnumerable<ContactDetail>



<div class="container shadow p-5">

    <h1 class="text-center mb-3">Customer Messages</h1>

    
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Customer Name</th>
                <th scope="col">Customer Email</th>
                <th scope="col">Customer Message</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.ContactName
                    </td>
                    <td width="20%">
                        @item.ContactEmail
                    </td>
                    <td width="50%">
                        @item.Message
                    </td>
                    <td>
                        <div role="group" class="w-10 btn-group">
                            <a asp-controller="Home" asp-action="ContactDelete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>