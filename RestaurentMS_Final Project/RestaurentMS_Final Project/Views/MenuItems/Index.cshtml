@using RestaurentMS_Final_Project.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["success"] != null)
{
    <br />
    <br />
    <br />
    <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>Success! </strong>@TempData["success"]
    </div>
}
<br />
<br />
<br />
<div class="p-4 border rounded">

    <h2 style="color: black">Menu Items</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-2">
            <a asp-controller="MenuItems" asp-action="Create" class="btn btn-md btn-primary"><i class="bi bi-file-plus-fill"></i>Add New Item</a>
        </div>
    }
    
    <table class="table table-striped border">
       
            <tr>
                <th scope="col">Category Name</th>
                <th scope="col">Description</th>
                <th></th>
            </tr>



            @foreach (var item in Model)
            {
                <tr>
                    <td width="45%">
                        @item.MenuItemName
                    </td>
                    <td width="45%">
                        @item.MenuItemPrice
                    </td>
                   
                    <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <div role="group" class="w-10 btn-group">

                            <a asp-controller="MenuItems" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    }
                </td>
                </tr>
            }

    </table>
</div>