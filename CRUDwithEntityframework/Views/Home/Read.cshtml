@model IEnumerable<CRUDwithEntityframework.Models.Customer>

@{
    ViewData["Title"] = "Read";
}

<h1>Read</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Customer_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Customer_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Customer_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
